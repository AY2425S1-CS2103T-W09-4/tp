<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox alignment="CENTER" fx:id="helpMessageContainer">
        <VBox>
          <Label fx:id="featureIntroduction" text="Basic feature introduction"/>
        </VBox>
        <VBox fx:id="addFeatureGuide">
          <Text fx:id="addFeatureHeader">
            Add
          </Text>
          <Text>
            Adds a person to DorManagerPro
          </Text>
          <Text>
            Format: add n/NAME p/PHONE_NUMBER e/EMAIL r/ROOM_NUMBER a/ADDRESS [t/TAG]
          </Text>
          <Text>
            Note: ROOM_NUMBER, ADDRESS and TAGs are optional.
          </Text>
        </VBox>
        <VBox fx:id="editFeatureGuide">
          <Text fx:id="editFeatureHeader">
            Edit
          </Text>
          <Text>
            Edits a person in DorManagerPro
          </Text>
          <Text>
            Format: add n/NAME p/PHONE_NUMBER e/EMAIL r/ROOM_NUMBER a/ADDRESS [t/TAG]
          </Text>
          <Text>
            Note: ROOM_NUMBER, ADDRESS and TAGs are optional.
          </Text>
        </VBox>
        <VBox fx:id="deleteFeatureGuide">
          <Text fx:id="deleteFeatureHeader">
            Delete
          </Text>
          <Text>
            Adds a person to the address book
          </Text>
          <Text>
            Format: add n/NAME p/PHONE_NUMBER e/EMAIL r/ROOM_NUMBER a/ADDRESS [t/TAG]
          </Text>
          <Text>
            Note: ROOM_NUMBER, ADDRESS and TAGs are optional.
          </Text>
        </VBox>
        <HBox alignment="CENTER" fx:id="userGuideLinkContainer">
          <children>
            <Label fx:id="helpMessage" text="Label">
              <HBox.margin>
                <Insets right="5.0" />
              </HBox.margin>
            </Label>
            <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
              <HBox.margin>
                <Insets left="5.0" />
              </HBox.margin>
            </Button>
          </children>
          <opaqueInsets>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
          </opaqueInsets>
          <padding>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
          </padding>
        </HBox>
      </VBox>
    </Scene>
  </scene>
</fx:root>
